<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ArrRenewalCollectionManualActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Renewal Collection"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />




                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="8dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtSearchPolicy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_white"
                                android:elevation="8dp"
                                android:gravity="center"
                                android:hint="Enter Policy Code"
                                android:maxLines="1"
                                android:enabled="true"
                                android:padding="9.5dp"
                                android:textColor="@color/headingDarkLoanRenewal"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnSearchPolicy"
                                android:layout_width="90dp"
                                android:layout_height="42dp"
                                android:background="@drawable/button_background_buttons"
                                android:elevation="6dp"
                                android:text="Search"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_activity_renewal_collection_manual_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:id="@+id/et_activity_renewal_collection_polcode_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Enter PolicyCode or Name"
                        android:background="@drawable/background_white"
                        android:textSize="12sp"
                        android:paddingStart="10dp"/>
                    <Button
                        android:id="@+id/btn_activity_renewal_collection_manual_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="Search"
                        android:background="@drawable/login_button"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/sp_activity_renewal_collection_policy_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:orientation="vertical"
                android:padding="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginRight="150dp"
                    android:background="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/login_button"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Account Details"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_white"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5px">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:background="#60FFFFFF" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="50dp">
                            <ImageView
                                android:id="@+id/holderImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="@drawable/ic_user" />
                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account Holder Name"
                                android:textColor="#1A1A1A"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtRenPolicyHolderName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="TextView"
                                android:textColor="#3A3A3A"
                                android:textColorHint="#4D1A1A1A" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background_buttons" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="#32133767"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Account Number"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenPolicyNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.05"
                                    android:hint="Policy Number"
                                    android:textColor="#2B2B2B"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="#ffffff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="D.O.C"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenDOC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:hint="01/01/18"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Plan"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenPlanCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.05"
                                    android:hint="Plan"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="@drawable/background_home_menu" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Term"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenTerm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:hint="Term"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="#32133767"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Late fine applicable"
                                    android:textColor="#1A1A1A"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_activity_renewal_collection_late_fine_applicable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.05"
                                    android:gravity="center"
                                    android:hint="Late fine applicable"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="@color/colorWhite" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Late fine percentage"
                                    android:textColor="#1A1A1A"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_activity_renewal_collection_late_fine_percentage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:hint="percentage"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="#32133767"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total_amount"
                                    android:textColor="#1A1A1A"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_totalAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.05"
                                    android:gravity="center"
                                    android:hint="@string/total_amount"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="@color/colorWhite" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/last_diposit_date"
                                    android:textColor="#1A1A1A"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_LastDipositDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:hint="@string/last_diposit_date"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amount"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.05"
                                    android:hint="Amount"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="55dp"
                                android:background="#ffffff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mode"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtRenMode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:hint="Mode"
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone number"
                                android:textColor="#1A1A1A"
                                android:textSize="16.5dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPhoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="0.05"
                                android:hint="Phone number"
                                android:textColor="#3A3A3A"
                                android:textColorHint="#4D1A1A1A"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/background_white"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".7"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No. Of Installment :- "
                                    android:textColor="#3A3A3A"
                                    android:textColorHint="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/txtRenInstNo"
                                    android:layout_width="70dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/background_white"
                                    android:gravity="center"
                                    android:hint="Number"
                                    android:maxLines="1"
                                    android:textColor="#1A1A1A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <Button
                                    android:layout_width="120dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/button_background_buttons"
                                    android:text="VIEW"
                                    android:textColor="@color/colorWhite"
                                    android:textColorHint="@color/colorWhite" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_activity_renewal_collection_late_fine_root"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/background_white"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingLeft="8dp"
                                android:paddingBottom="5dp"
                                android:text="Late fine details"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_button"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Inst No."
                                    android:textColor="#FCFCFC" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Late fine"
                                    android:textColor="#FCFCFC" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_activity_renewal_collection_loan_emi_late_fine"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Total late fine"
                                    android:textColor="#1A1A1A" />

                                <TextView
                                    android:id="@+id/tv_activity_renewal_collection_total_late_fine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Late fine" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:visibility="gone">

                                <CheckBox
                                    android:id="@+id/cb_activity_arranger_renewal_collection"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Pay late fine amount" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="28dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/background_white"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|end"
                                android:paddingEnd="5dp"
                                android:paddingRight="5dp"
                                android:text="Late fine - "
                                android:textColor="@color/foreColor"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_activity_renewal_collection_late_fine"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:hint="Late fine"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:textColor="@color/foreColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C6C6C6"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/txtRenTotalAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/background_white"
                                    android:gravity="center"
                                    android:hint="Net Amount"
                                    android:textColor="#1A1A1A"
                                    android:inputType="number"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"/>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnRenView"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:background="@drawable/button_background_buttons"
                                android:text="VIEW"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:layout_marginLeft="2dp"
                                android:layout_gravity="center"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="3dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/txtRenFormInstNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/background_white"
                                    android:gravity="center"
                                    android:hint="From Inst."
                                    android:textColor="#1A1A1A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:id="@+id/txtRenToInstNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/background_white"
                                    android:gravity="center"
                                    android:hint="To Inst."
                                    android:textColor="#1A1A1A"
                                    android:textColorHint="#4D1A1A1A"
                                    android:textSize="16.5dp"
                                    android:textStyle="bold"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="60dp"
                                android:background="#ACACAC" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_activity_renewal_collection_wallet_bal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="wallet Balance"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>

                            <CheckBox
                                android:id="@+id/cb_activity_renewal_collection_check_for_approval"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:text="Check for approval" />
                        </LinearLayout>



                        <Button
                            android:id="@+id/btnRenewalSave"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/login_button"
                            android:text="Save"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_activity_login_developed_by"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#2c9336"
        android:gravity="center"
        android:text="@string/developed_by_genius_technology"
        android:textColor="#ffffff"
        android:visibility="gone" />

</LinearLayout>