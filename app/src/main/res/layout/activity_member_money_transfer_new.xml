<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MemberMoneyTransferNewActivity"
    android:orientation="vertical">


    <include layout="@layout/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_activity_member_money_trans_new_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_background"
                    android:layout_marginRight="2dp"
                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:digits="01234567890"
                    android:paddingStart="5dp"/>

                <Button
                    android:id="@+id/btn_activity_member_money_trans_new_mobile_no_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/button_background_buttons"
                    android:textColor="@color/white"
                    android:text="Check"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_activity_member_money_trans_new_add_customer_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Enter Details"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter First Name"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter Last Name"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_a_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter A Name"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_addr1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter Address Line 1"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_addr2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter Address Line 2"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_city"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter City"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter State"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter Country"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>

                    <EditText
                        android:id="@+id/et_activity_member_money_trans_new_cus_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/border_background"
                        android:hint="Enter Pincode"
                        android:paddingStart="5dp"
                        android:layout_marginTop="5dp"/>


                    <Button
                        android:id="@+id/btn_activity_member_money_trans_new_cus_add"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background_buttons"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:text="Add"/>

                    <LinearLayout
                        android:id="@+id/ll_activity_member_money_trans_new_cus_create_otp_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_cus_otp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter OTP"
                            android:paddingStart="5dp"
                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/btn_activity_member_money_trans_new_cus_otp_submit"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_background_buttons"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:text="Submit OTP"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/ll_activity_member_money_trans_new_active_customer_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_activity_member_money_trans_new_cus_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBlackHint"/>

                    <TextView
                        android:id="@+id/tv_activity_member_money_trans_new_cus_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:paddingStart="10dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="12sp"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBlackHint"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorBlack"
                    android:text="Money Trans Status"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_activity_member_money_trans_new_cus_trans_limit_details"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBlackHint"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_activity_member_money_trans_new_active_beneficiary_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_activity_member_money_trans_new_add_beneficiary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/button_background_buttons"
                            android:textColor="@color/white"
                            android:text="Add Beneficiary"
                            android:layout_marginRight="2dp"/>

                        <Button
                            android:id="@+id/btn_activity_member_money_trans_new_view_beneficiary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/button_background_buttons"
                            android:textColor="@color/white"
                            android:text="View Beneficiary"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_activity_member_money_trans_new_active_add_beneficiary_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_bennefic_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter Name"
                            android:paddingStart="5dp"
                            android:maxLines="1"
                            android:inputType="textCapCharacters"
                            android:layout_marginTop="5dp"/>

                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_bennefic_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter Mobile No"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:digits="01234567890"
                            android:paddingStart="5dp"
                            android:layout_marginTop="5dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/border_background"
                            android:layout_marginTop="5dp">

                            <com.geniustechnoindia.purnodaynidhi.others.SearchableSpinner
                                android:id="@+id/sp_activity_member_money_trans_new_bank_list"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:backgroundTint="@color/colorBlack"
                                android:layout_marginEnd="40dp"
                                app:hintText="Select bank" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_bennefic_acc_no"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter Account No"
                            android:paddingStart="5dp"
                            android:inputType="number"
                            android:digits="01234567890"
                            android:layout_marginTop="5dp"/>

                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_bennefic_ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter IFSC Code"
                            android:maxLines="1"
                            android:inputType="textCapCharacters"
                            android:paddingStart="5dp"
                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/btn_activity_member_money_trans_new_add_ben"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background_buttons"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="Submit"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_activity_member_money_trans_new_active_add_beneficiary_otp_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_activity_member_money_trans_new_bennefic_add_otp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/border_background"
                            android:hint="Enter OTP"
                            android:paddingStart="5dp"
                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/btn_activity_member_money_trans_new_bennefic_add_otp_submit"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_background_buttons"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="Submit OTP"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_activity_member_money_trans_new_beneficiary_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"/>




        </LinearLayout>

    </ScrollView>

</LinearLayout>