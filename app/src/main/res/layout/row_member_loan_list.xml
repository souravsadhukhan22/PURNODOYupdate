<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#E3E0E0"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/ll_row_member_loan_list_root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_row_member_loan_list_loan_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="LoanCode"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_row_member_loan_list_emi_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="EMI Mode"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_row_member_loan_list_emi_amt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="EMI Amt"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tv_row_member_loan_list_loan_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Status"
            android:gravity="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>