<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminLoginActivity"
    android:orientation="vertical"
    android:background="@color/backMain"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">


            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pnl_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="~ Admin Login ~"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout
            android:id="@+id/til_activity_login_user_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:gravity="bottom"
            android:textColorHint="@color/colorTextHint"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_activity_admin_login_username"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Username"
                android:inputType="text"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingStart="20dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:background="@drawable/border_background_trans"/>
        </com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout>

        <com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout
            android:id="@+id/til_activity_login_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:textColorHint="@color/colorTextHint"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_activity_admin_login_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingStart="20dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:background="@drawable/border_background_trans"/>
        </com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout>

        <CheckBox
            android:id="@+id/check_box_admin_login_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Remember Me"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/colorText"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_activity_admin_login_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:paddingBottom="15dp"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:paddingTop="15dp"
                android:text="Login"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>