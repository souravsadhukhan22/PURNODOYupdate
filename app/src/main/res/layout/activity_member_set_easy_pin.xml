<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activities.MemberSetEasyPINActivity">

    <include
        layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="@string/easyPinMessage"/>

        <com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:gravity="bottom"
            android:layout_marginTop="25dp"
            android:theme="@style/TextLabelCustom"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_activity_set_easy_pin_enter_pin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Enter 6 digit mPIN"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout>

        <com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:theme="@style/TextLabelCustom"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_activity_set_easy_pin_confirm_pin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Confirm 6 digit mPIN"
                android:inputType="textPassword"
                android:maxLines="1"
                android:maxLength="6"
                android:paddingEnd="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_activity_set_easy_pin_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:paddingBottom="15dp"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"
                android:textSize="12sp"
                android:paddingTop="15dp"
                android:text="Confirm"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>