<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlanDetailsActivity"
    android:orientation="vertical"
    android:background="#F5F5F5">

        <include layout="@layout/custom_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_activity_plan_details_daily_deposit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_back_black_light_custom"
                android:text="Daily Deposit"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_activity_plan_details_fixed_deposit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_back_black_light_custom"
                android:text="Fixed Deposit"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_activity_plan_details_mis"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_back_black_light_custom"
                android:text="MIS (Monthly incode Scheme)"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_activity_plan_details_recurring"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/border_back_black_light_custom"
                android:text="Recurring Deposit"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

</LinearLayout>