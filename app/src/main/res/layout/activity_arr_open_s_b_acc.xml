<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ArrOpenSBAccActivity">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/background_white"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_open_savings_account_access_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/shape_underline"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableRight="@drawable/ic_down_arrow"
                android:gravity="center"
                android:hint="Account access type"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Select type: "
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/llTypeId"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_open_savings_account_first_applicant_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"


                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="First applicant details"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout
                        android:id="@+id/til_activity_open_savings_account_first_applicant_membership_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:theme="@style/TextLabel"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_activity_open_savings_account_first_applicant_membership_code"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:hint="First applicant member code"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />
                    </com.geniustechnoindia.purnodaynidhi.util.NoChangingBackgroundTextInputLayout>

