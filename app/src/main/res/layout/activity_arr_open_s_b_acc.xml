                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_activity_login_second_applicant_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Name"
                        android:inputType="text"
