<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".activities.ArrTotalActivePolicyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1a84d3"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtactivepolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Total Active Policy"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dp"
        android:background="#88B8D3"
        >


        <TextView
            android:id="@+id/tv1policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.12"
            android:textSize="17dp"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Sl No."/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv2policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:gravity="center"
            android:textSize="17dp"

          android:layout_marginRight="3dp"
            android:textStyle="bold"
            android:text="Pcode"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv3policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:textSize="17dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Name"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tv4policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:textSize="17dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Phone"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tv5policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Deposit"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activepolicyrecycle"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="match_parent"/>








</LinearLayout>