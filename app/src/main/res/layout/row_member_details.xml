<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EAEAEA"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_row_member_details_member_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="M Code"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_member_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Name"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_ofc_id"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Ofc ID"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_joined"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Joined"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_dob"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="DOB"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_row_member_details_father"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Father"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_addr"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="Addr"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_state"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="State"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_email"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Email"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_row_member_details_phone"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Phone"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_gender"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Gender"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_idproof"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="IDProof"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_row_member_details_idproof_no"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:hint="IDProofNo"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_row_member_details_pan_no"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:hint="Pan No"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>