<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#E6E6E6"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/ll_row_policy_list_by_name_root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_row_policy_list_by_name_policy_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="PolicyCode"
            android:gravity="center"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_row_policy_list_by_name_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Name"
            android:gravity="center"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tv_row_policy_list_by_name_guardian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Guardian"
            android:gravity="center"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>