<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backMain"
    tools:context=".activities.ArrangerMemberDetailsActivity">

    <include layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_activity_arr_member_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_back_black_light_custom"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/rb_activity_arr_member_details_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="All" />

                <RadioButton
                    android:id="@+id/rb_activity_arr_member_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Name" />

                <RadioButton
                    android:id="@+id/rb_activity_arr_member_details_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Code" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_activity_arr_member_details_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Value"
                android:background="@drawable/border_back_black_light_custom"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_activity_arr_member_details_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Search" />
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="M Code"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Name"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Ofc ID"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Joined"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="DOB"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Father"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="Addr"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="State"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Phone"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Gender"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="IDProof"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="IDProofNo"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="Pan No"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_activity_arr_member_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>