<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MemberChangePassword"
    android:orientation="vertical"
    android:background="@color/backMain">

    <include layout="@layout/custom_toolbar" />

    <LinearLayout
        android:id="@+id/ll_activity_settings_authenticate_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_activity_settings_current_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/background_white"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:hint="Enter current password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_activity_settings_authenticate"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/login_button"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="Authenticate"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_settings_new_password_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_activity_settings_new_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/background_white"
            android:gravity="center"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:textColor="@color/colorText"/>

        <EditText
            android:id="@+id/et_activity_settings_confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_white"
            android:gravity="center"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:textColor="@color/colorText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_activity_settings_change_password"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/login_button"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="Change password"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>